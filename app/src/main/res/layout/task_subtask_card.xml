<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/subTaskTitle"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:background="@color/pale_yellow"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:textColor="@color/black"
            android:textSize="20sp">
        </TextView>

        <RelativeLayout
            android:id="@+id/dueDateArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/subTaskTitle"
            android:layout_toEndOf="@+id/subTaskTitle"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp">

            <TextView
                android:id="@+id/dueDateDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/dueDateSeparator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/dueDateDay"
                android:layout_toEndOf="@+id/dueDateDay"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="@string/due_date_separator"
                android:textSize="20sp"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/dueDateMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/dueDateSeparator"
                android:layout_toEndOf="@+id/dueDateSeparator"
                android:textSize="20sp"
                android:textColor="@color/black">
            </TextView>

        </RelativeLayout>

        <CheckBox
            android:id="@+id/taskCheckBox"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:scaleX="1.4"
            android:scaleY="1.4">
        </CheckBox>

    </RelativeLayout>

</androidx.cardview.widget.CardView>