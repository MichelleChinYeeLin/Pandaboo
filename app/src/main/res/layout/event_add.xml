<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/airforceblue">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_gravity="top"
        android:background="@color/olivegreen"
        android:padding="3dp">

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            android:text="Back"
            android:textColor="@color/black" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mainInfo_holder"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/topBar"
        android:background="@color/orange_yellowish">

        <TextView
            android:id="@+id/eventTitleText"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="Title    :"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/eventTitle"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/eventTitleText"
            android:background="@color/white"
            android:gravity="start"
            android:inputType="textShortMessage"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/detailsText"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"
            android:text="Details:"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/details"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_toRightOf="@+id/detailsText"
            android:background="@color/white"
            android:gravity="start"
            android:inputType="textShortMessage"
            android:textColor="@color/black"
            android:textAlignment="textStart"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/details_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mainInfo_holder"
        android:layout_marginTop="20dp"
        android:background="@color/orange_yellowish">

        <TextView
            android:id="@+id/selectTimeText"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:text="Select Time:"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/selectTime"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/selectTimeText"
            android:background="@drawable/timeicon"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/setTimeText"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/selectTime"
            android:text="00:00 AM"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/dateText"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_below="@+id/selectTimeText"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30sp"
            android:text="Date:"
            android:textColor="@color/black"
            android:textSize="30sp"
            tools:ignore="UnknownId" />

        <ImageButton
            android:id="@+id/selectDate1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@+id/selectTime"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20sp"
            android:background="@drawable/calendar_icon"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/setDateText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/setTimeText"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40sp"
            android:layout_toRightOf="@+id/selectDate1"
            android:text="Date1"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/dateTodateText"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/selectDate1"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10sp"
            android:text="to"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/selectDate2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@+id/dateTodateText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:background="@drawable/calendar_icon"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/setDateText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="200sp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/selectDate2"
            android:text="Date2"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/reminderText"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_below="@+id/selectDate2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Reminder:"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <CheckBox
            android:id="@+id/setReminder1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/selectDate2"
            android:layout_marginTop="20sp"
            android:layout_toRightOf="@+id/reminderText"
            android:text="7:00 AM"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <CheckBox
            android:id="@+id/setReminder2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/setReminder1"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/reminderText"
            android:text="120 min earlier"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <Switch
            android:id="@+id/occurDaily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/occurWeekly"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:text="Occur Daily"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <Switch
            android:id="@+id/occurWeekly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:text="Occur Weekly"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="Save" />

    </RelativeLayout>

</RelativeLayout>