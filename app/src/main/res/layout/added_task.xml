<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/olivegreen"
        >

        <RelativeLayout
            android:id="@+id/mainTask"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginVertical="20dp"
            android:layout_marginLeft="30dp"
            android:background="@color/yellow">

            <TextView
                android:id="@+id/taskTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Task Title"
                android:textColor="@color/black"
                android:textSize="20sp"></TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/subTask1"
            android:layout_width="250dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_marginVertical="75dp"
            android:layout_marginLeft="30dp"
            android:background="@color/yellow">

            <TextView
                android:id="@+id/subTaskTextEdit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Sub Task"
                android:textColor="@color/black"
                android:textSize="15sp"></TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/subTask2"
            android:layout_width="250dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_marginVertical="110dp"
            android:layout_marginLeft="30dp"
            android:background="@color/yellow">

            <TextView
                android:id="@+id/subTaskTextEdit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Sub Task"
                android:textColor="@color/black"
                android:textSize="15sp"></TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/timeAndPriority1"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="300dp"
            android:layout_marginVertical="70dp">

            <TextView
                android:id="@+id/dueDate1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:text="__:__"
                android:textColor="@color/black"
                android:textSize="20sp"></TextView>

            <RelativeLayout
                android:id="@+id/box1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60dp"
                android:background="@color/white"></RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/timeAndPriority2"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="300dp"
            android:layout_marginVertical="110dp">

            <TextView
                android:id="@+id/dueDate2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:text="__:__"
                android:textColor="@color/black"
                android:textSize="20sp"></TextView>
            <RelativeLayout
                android:id="@+id/box2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="60dp"
                android:layout_centerVertical="true"
                android:background="@color/white">
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/editIcon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginVertical="15dp"
            >

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:src="@drawable/ic_baseline_edit_24"
                app:tint="@color/black"></ImageButton>
            </RelativeLayout>
    </RelativeLayout>



</androidx.cardview.widget.CardView>