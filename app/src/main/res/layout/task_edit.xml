<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Task"
    android:background="@color/blue">

    <RelativeLayout
        android:id="@+id/taskTopBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/olivegreen">

        <Button
            android:id="@+id/TaskBackButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/pale_yellow"
            android:text="@string/back"
            android:textColor="@color/black"
            tools:ignore="RelativeOverlap,TextContrastCheck"
            tools:targetApi="lollipop" />

        <TextView
            android:id="@+id/taskEditTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="Edit Task"
            android:textSize="30sp"></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mainTask"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/taskTopBar"
        android:layout_alignParentLeft="true"
        android:layout_marginVertical="20dp">

        <TextView
            android:id="@+id/taskTitleText"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:text="Task Title:"
            android:textColor="@color/black"
            android:textSize="25sp"></TextView>

        <EditText
            android:id="@+id/taskTitleEdit"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:background="@color/yellow"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:ignore="TouchTargetSizeCheck"></EditText>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/subTask"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/mainTask"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp">

        <TextView
            android:id="@+id/subTaskText"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:text="Sub Task:"
            android:textColor="@color/black"
            android:textSize="20sp"></TextView>

        <EditText
            android:id="@+id/subTaskTextEdit"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@color/yellow"
            android:textSize="15sp"></EditText>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/timeAndPriority"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_below="@id/subTask"
        android:layout_marginVertical="20dp"
        android:layout_alignParentLeft="true">

        <!--
        <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></DatePicker>
         -->

        <Button
            android:id="@+id/dueDateButton"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:text="Due Date"
            android:textColor="@color/black"
            android:textSize="15sp"></Button>

        <TextView
            android:id="@+id/selectdDate"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_below="@id/dueDateButton"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_below="@id/subTask"
        android:layout_alignParentRight="true"
        android:layout_marginVertical="10dp"
        android:layout_marginRight="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:text="Priority: "
            android:textColor="@color/black"
            android:textSize="20sp"></TextView>

        <RelativeLayout
            android:id="@+id/taskDropDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginVertical="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/pale_yellow_translucent">

            <Spinner
                android:id="@+id/dropDownSpinner"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:spinnerMode="dropdown"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/displaySpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="15sp"
                android:textColor="@color/black"/>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
    android:id="@+id/cancelTaskArea"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginLeft="300dp"
    android:layout_marginVertical="135dp"
    android:layout_marginRight="10dp"
    android:layout_alignParentRight="true">

        <ImageButton
            android:id="@+id/cancelTaskIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/transparent"
            android:src="@drawable/cancel"
            app:tint="@color/red"></ImageButton>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/addSubtaskArea"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginVertical="250dp">

        <TextView
            android:id="@+id/addTaskText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:text="Add Task"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/addSubTaskButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_marginVertical="20dp"
            android:layout_marginLeft="150dp"
            android:background="@color/transparent"
            android:src="@drawable/ic_baseline_add_circle_24"
            app:tint="@color/olivegreen" />

    </RelativeLayout>

</RelativeLayout>