<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Task"
    android:background="@color/blue">

    <RelativeLayout
        android:id="@+id/taskTopBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/olivegreen">

        <Button
            android:id="@+id/TaskBackButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/pale_yellow"
            android:text="@string/back"
            android:textColor="@color/black"
            tools:ignore="RelativeOverlap,TextContrastCheck"
            tools:targetApi="lollipop" />

        <TextView
            android:id="@+id/taskEditTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="Edit Task"
            android:textSize="30sp"></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mainTask"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/taskTopBar"
        android:layout_alignParentLeft="true"
        android:layout_marginVertical="20dp"
        android:layout_marginLeft="30dp"
        android:background="@color/yellow">

        <EditText
            android:id="@+id/taskTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Task Title"
            android:textColor="@color/black"
            android:textSize="20sp"></EditText>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/subTask"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_below="@+id/mainTask"
        android:layout_alignParentLeft="true"
        android:layout_marginVertical="5dp"
        android:layout_marginLeft="30dp"
        android:background="@color/yellow">

        <EditText
            android:id="@+id/subTaskTextEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Sub Task"
            android:textColor="@color/black"
            android:textSize="15sp"></EditText>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/timeAndPriority"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/subTask"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp">

        <!--
        <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></DatePicker>
         -->

        <EditText
            android:id="@+id/dueDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Due Date: __:__"
            android:textColor="@color/black"
            android:textSize="15sp"></EditText>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_below="@id/subTask"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Priority: "
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"></TextView>

        <RelativeLayout
            android:id="@+id/taskDropDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@color/pale_yellow_translucent">

            <Spinner
                android:id="@+id/dropDownSpinner"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:spinnerMode="dropdown"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="SpeakableTextPresentCheck"></Spinner>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
    android:id="@+id/cancelTaskArea"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginLeft="300dp"
    android:layout_marginVertical="135dp">

    <ImageButton
        android:id="@+id/cancelTaskIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/transparent"
        android:src="@drawable/cancel"
        app:tint="@color/red"
        ></ImageButton>
    </RelativeLayout>

</RelativeLayout>