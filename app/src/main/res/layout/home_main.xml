<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeMain"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/olivegreen">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/music_icon_not_muted"
            android:src="@drawable/music_icon"
            tools:ignore="ImageContrastCheck"></ImageView>

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:background="#EEEDCE">

            <ImageView
                android:id="@+id/timerIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:contentDescription="@string/timer_icon"
                android:src="@drawable/timer_icon"
                app:tint="@color/black"></ImageView>

            <TextView
                android:id="@+id/timerCountdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_toEndOf="@+id/timerIcon"
                android:layout_toRightOf="@+id/timerIcon"
                android:textColor="@color/black"
                android:textSize="40sp"></TextView>

        </RelativeLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/start_button"
        android:textSize="20sp"
        app:backgroundTint="#D03535"></Button>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-1dp"
        android:background="@color/olivegreen">

        <Button
            android:id="@+id/pandaButton"
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/olivegreen"
            android:text="@string/panda"
            android:textAllCaps="false"
            android:textColor="#212121" />

        <Button
            android:id="@+id/shopButton"
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="251dp"
            android:layout_marginRight="251dp"
            android:backgroundTint="@color/olivegreen"
            android:text="@string/shop"
            android:textAllCaps="false"
            android:textColor="#000000"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/eventButton"
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="168dp"
            android:layout_marginRight="168dp"
            android:backgroundTint="@color/olivegreen"
            android:text="@string/planner"
            android:textAllCaps="false"
            android:textColor="#212121" />

        <Button
            android:id="@+id/tasksButton"
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="84dp"
            android:layout_marginRight="84dp"
            android:backgroundTint="@color/olivegreen"
            android:text="@string/tasks"
            android:textAllCaps="false"
            android:textColor="#212121" />

        <Button
            android:id="@+id/settingsButton"
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:backgroundTint="@color/olivegreen"
            android:text="@string/settings"
            android:textAllCaps="false"
            android:textColor="#212121" />

    </RelativeLayout>

</RelativeLayout>